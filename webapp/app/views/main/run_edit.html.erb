
<div class="container nav-sep">
  <h2>Mark Boba as Picked Up:</h2>
  <hr>
  <form method="POST" action="/run_edit/<%=params[:id]%>" enctype="multipart/form-data">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="container">
    <div class="row">
      <label class="col-6" > Picture of Drinks </label>
      <label class="col-6" > Picture of Receipt </label>
    </div>
    <div class="row">
      <div class="col-6">
        <%if File.exist?("./public/uploads/runs/#{params[:id]}/drinks.png") %>
          <img style="width: 250px; height: 250px"  src="../uploads/runs/<%=params[:id]%>/drinks.png">
        <%end %>
      </div>
      <div class="col-6">
        <%if File.exist?("./public/uploads/runs/#{params[:id]}/receipt.png") %>
          <img style="width: 250px; height: 250px"  src="../uploads/runs/<%=params[:id]%>/receipt.png">
        <%end %>
      </div>
    </div>
    <div class="row">
      <input name = "drinks" type="file" class="col-6" > Picture of Drinks </label>
      <input name = "receipt" type="file" class="col-6" > Picture of Receipt </label>
    </div>
    <br>
    <div class="row">
      <button type="submit">Save</button>
    </div>
  </div>
  </form>
  <br><br>
  <div class="container">
    <div class="row">
      <label>Status: <%=Run[params[:id]].status%></label>
    </div>
  </div>
  <br><br>
  <form method="POST" action= "/run_state_onwards/<%=params[:id]%>">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="container">
    <div class="row">
      <button type="submit">Next Stage</button>
    </div>
  </div>
  </form>
</div>
