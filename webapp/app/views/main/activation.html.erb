<% if @alert %>
  <div class="alert alert-danger">
    <a class="close" data-dismiss="alert" href="#">×</a><%= @alert %>
  </div>
<% end %>
<% if @notice %>
  <div class="alert alert-info">
    <a class="close" data-dismiss="alert" href="#">×</a><%= @notice %>
  </div>
<% end %>
<div class="bg-full bg-login">
  <div class="container text-center text-light">
    <form class="form-signin" action="?redirect=<%= @redirect %>" method="POST" accept-charset="UTF-8">
      <img class="mb-0" src="/img/hastea4.png" alt="" width="100%" height="100%">
      <img class="mt-0 mb-4" src="/img/handwriting.png" alt="" width="100%" height="100%">
      <label for="inputEmail" class="sr-only">Email address</label>
      <input type="email" id="inputEmail" class="form-control" name="email" placeholder="Email Address" required autofocus>
      <label for="inputActivation" class="sr-only">Activation Code</label>
      <input type="number" id="inputActivation" class="form-control" name="activation" placeholder="Activation Code" required>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <button class="btn btn-lg btn-primary btn-block form-submit" type="submit">Activate</button>
    </form>
  </div>
</div>
